                        </StackPanel>
                        <StackPanel Margin="10,20,20,5">
                            <TextBlock Style="{StaticResource Header}" FontFamily="/Resources/#Aero Matics"
                                       Margin="5,0,5,5" FontWeight="Normal">
                                Host Settings
                            </TextBlock>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="16" FontFamily="/Resources/#Aero Matics Light">Start Timer:</TextBlock>
                                <StackPanel Orientation="Horizontal">
                                    <Slider Name="sldTimer" Minimum="0" Maximum="20"
                                        TickFrequency="1" IsSnapToTickEnabled="True" Value="{Binding Host.Countdown}"
                                        Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"
                                        FontFamily="/Resources/#Aero Matics Light" Width="95" />
                                    <TextBox Text="{Binding Host.Countdown}" Width="60"
                                         TextAlignment="Center" FontFamily="/Resources/#Aero Matics Light" HorizontalAlignment="Right" Margin="5,5,0,5">
                                        <TextBox.Background>
                                            <SolidColorBrush Color="White" Opacity="0.07" />
                                        </TextBox.Background>
                                    </TextBox>
                                </StackPanel>
                            </StackPanel>
                            <!-- 
                                    Max Players Slider - Collapsed until the game supports it.
                            -->
                            <StackPanel Orientation="Horizontal" Visibility="Visible">
                                <TextBlock FontSize="16" FontFamily="/Resources/#Aero Matics Light">Max Players:</TextBlock>
                                <StackPanel Orientation="Horizontal">
                                    <Slider Name="sldMax" Minimum="1" Maximum="16" TickFrequency="1" IsSnapToTickEnabled="True" Value="{Binding Host.MaxPlayer}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="/Resources/#Aero Matics Light" Width="90"/>
                                    <TextBox Text="{Binding Host.MaxPlayer}" Width="60" TextAlignment="Center" FontFamily="/Resources/#Aero Matics Light" Margin="5,5,0,5" HorizontalAlignment="Right">
                                        <TextBox.Background>
                                            <SolidColorBrush Color="White" Opacity="0.07"/>
                                        </TextBox.Background>
                                    </TextBox>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock Style="{StaticResource Header}" Margin="5,20,5,5"
                                       FontFamily="/Resources/#Aero Matics" FontWeight="Normal">
                                Launch Options
                            </TextBlock>
                            <CheckBox Name="chkWin" Grid.ColumnSpan="2" IsChecked="{Binding LaunchParams.WindowedMode}"
                                      Template="{DynamicResource CheckBoxControlTemplate1}" FontSize="16"
                                      FontFamily="/Resources/#Aero Matics Light">
                                Windowed Mode
                            </CheckBox>
                            <CheckBox Name="chkFull" Grid.ColumnSpan="2" IsChecked="{Binding LaunchParams.Fullscreen}"
                                      Template="{DynamicResource CheckBoxControlTemplate1}" FontSize="16"
                                      FontFamily="/Resources/#Aero Matics Light">
                                Fullscreen Mode
                            </CheckBox>
                            <CheckBox Name="chkVSync" Grid.ColumnSpan="2" IsChecked="{Binding LaunchParams.NoVSync}"
                                      Template="{DynamicResource CheckBoxControlTemplate1}" FontSize="16"
                                      FontFamily="/Resources/#Aero Matics Light">
                                Disable Vertical Sync (VSync)
                            </CheckBox>
                            <CheckBox Name="chkDX9Ex" Grid.ColumnSpan="2" IsChecked="{Binding LaunchParams.DX9Ex}"
                                      Template="{DynamicResource CheckBoxControlTemplate1}" FontSize="16"
                                      FontFamily="/Resources/#Aero Matics Light">
                                Enable DirectX 9.0 Extensions
                            </CheckBox>
                            <CheckBox Name="chkFPS" Grid.ColumnSpan="2" IsChecked="{Binding LaunchParams.FPSCounter}"
                                      Template="{DynamicResource CheckBoxControlTemplate1}" FontSize="16"
                                      FontFamily="/Resources/#Aero Matics Light">
                                Show FPS Counter
                            </CheckBox>
                            <CheckBox Name="chkIntro" Grid.ColumnSpan="2" IsChecked="{Binding Video.IntroVideo}"
                                      Template="{DynamicResource CheckBoxControlTemplate1}" FontSize="16"
                                      FontFamily="/Resources/#Aero Matics Light">
                                Disable Intro Videos
                            </CheckBox>
                        </StackPanel>
                    </st:AutoGrid>
                    <st:AutoGrid Columns="*" RowHeight="*" Margin="0,20,20,20" Height="30" VerticalAlignment="Bottom">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Border Grid.Column="1" Grid.Row="1" BorderBrush="White" BorderThickness="1" Width="75"
                                    Height="30" HorizontalAlignment="Right">
                                <Border.Background>
                                    <SolidColorBrush Color="White" Opacity="0.07" />
                                </Border.Background>
                                <Button x:Name="btnReset" Content="RESET" Click="btnReset_Click"
                                        Style="{StaticResource Hover}" />
                            </Border>
                            <Border Grid.Column="1" Grid.Row="1" BorderBrush="White" BorderThickness="1" Width="75"
                                    Height="30" Margin="20,0,0,0" HorizontalAlignment="Right">
                                <Border.Background>
                                    <SolidColorBrush Color="White" Opacity="0.07" />
                                </Border.Background>
                                <Button x:Name="btnApply2" Content="OK" Click="btnApply2_Click"
                                        Style="{StaticResource Hover}" />
                            </Border>
                        </StackPanel>
                    </st:AutoGrid>
                    <Line Stretch="Fill" Y2="35" HorizontalAlignment="Right" VerticalAlignment="Top" Height="45"
                          Width="45" Fill="{x:Null}" X2="35" Margin="0,-6,-5,0" Stroke="#FF47A6FF" StrokeThickness="2" />
                </Grid>
            </Border>
        </Grid>
        <!--<Canvas HorizontalAlignment="Left" Height="230" Margin="10,10,0,0" VerticalAlignment="Top" Width="484">
            <Canvas.Background>
                <ImageBrush ImageSource="Resources/logo.png" Stretch="Uniform"/>
            </Canvas.Background>
        </Canvas>-->
    </Grid>
</Window>