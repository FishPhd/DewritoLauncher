    </Window.Resources>
    <Window.BorderBrush>
        <SolidColorBrush Color="#FF47A6FF" Opacity="0.75"/>
    </Window.BorderBrush>
    <Window.Background>
        <ImageBrush ImageSource="Resources/BG_Nightfall.png" />
    </Window.Background>
    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="ToolTipService.InitialShowDelay" Value="2000" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Margin="20,3,398,0" Foreground="White" Grid.ColumnSpan="2" FontSize="20"
                   TextOptions.TextFormattingMode="Display">
            <Run x:Name="run" Foreground="White" Text="ELDEWRITO" FontFamily="/Resources/#Aero Matics" BaselineAlignment="Center" />
            <Run Foreground="White" Text="- HALO ONLINE" BaselineAlignment="Center" />
        </TextBlock>
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" DockPanel.Dock="Left" Background="Transparent"
              utils:WindowMovement.DragsWindow="True" Height="30" VerticalAlignment="Top" />
        <StackPanel Grid.Row="0" Grid.Column="1" DockPanel.Dock="Right" Orientation="Horizontal"
                    HorizontalAlignment="Right" Width="114">
            <Button BorderBrush="#FF707070" BorderThickness="1" FontSize="20" Width="57" Click="MinButton_Click"
                    Style="{StaticResource HoverMinimize}" Cursor="Hand" ToolTip="Minimize the launcher">
                <Image Source="Resources/BTN_Minimize.png" Width="14" HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            </Button>
            <Button BorderBrush="#FF707070" BorderThickness="1" FontSize="15" Width="57" Click="CloseButton_Click"
                    Style="{StaticResource HoverClose}" Cursor="Hand" ToolTip="Close the launcher">
                <Image Source="Resources/BTN_Close.png" Width="14" Height="14" HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            </Button>
        </StackPanel>
        <Grid Grid.Row="1" Grid.Column="0" Margin="20,20,10,20">
            <Canvas HorizontalAlignment="Center" Height="225" VerticalAlignment="Center" Width="370"
                    SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="NearestNeighbor" Margin="0,52,0,253">
                <Canvas.Background>
                    <ImageBrush ImageSource="Resources/LOGO_Launcher.png" Stretch="Uniform" />
                </Canvas.Background>
            </Canvas>
            <ItemsControl ItemsSource="{Binding Text, ElementName=run}"
                              Foreground="White" FontFamily="/Resources/#Aero Matics" FontSize="42" 
                              Margin="65,0,65,185" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
            					Margin="2.5,0,2.5,0"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Grid Height="118" VerticalAlignment="Bottom">
                <Border BorderThickness="2" Width="215" HorizontalAlignment="Left" Margin="0,0,0,0" Height="54"
                        VerticalAlignment="Top">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="#FF47A6FF" />
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#FF214D75" Opacity="1" />
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderBrush" Value="#FFB3DAFF" />
                                    <Setter Property="Background" Value="#FF567EA2" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Border.Clip>
                        <GeometryGroup>
                            <!--This PathGeometry will cut RectangleGeometry, cut-off right top-->
                            <PathGeometry>
                                <PathGeometry.Figures>
                                    <PathFigure x:Name="BorderClipFigure" StartPoint="0,0">
                                        <LineSegment Point="195,0" />
                                        <LineSegment Point="215,20" />
                                        <LineSegment Point="215,55" />
                                        <LineSegment Point="0,55" />
                                    </PathFigure>
                                </PathGeometry.Figures>
                            </PathGeometry>
                        </GeometryGroup>
                    </Border.Clip>
                    <Grid Name="gridAction">
                        <Grid.Resources>
                            <Style TargetType="{x:Type Line}">
                                <Setter Property="Stroke" Value="#FF47A6FF" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding RelativeSource={RelativeSource AncestorType=Grid},
                                               Path=IsMouseOver}"
                                        Value="True">
                                        <Setter Property="Stroke" Value="#FFB3DAFF" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Resources>
                        <Button x:Name="btnAction" Content="VERIFYING" HorizontalAlignment="Center" IsEnabled="False"
                                Click="btnAction_Click" Template="{DynamicResource BackgroundButton}"
                                BorderBrush="White" FontSize="30" Width="215" FontFamily="/Resources/#Aero Matics"
                                Cursor="Hand" Margin="-4,0,0,0">
                            <Button.Background>
                                <SolidColorBrush Color="#00FF0000" />
                            </Button.Background>
                            <Button.Resources>
                                <ControlTemplate x:Key="BackgroundButton" TargetType="Button">
                                    <Border Name="border" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Resources>
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger
                                            Binding="{Binding RelativeSource={RelativeSource AncestorType=Border,AncestorLevel=1}, Path=IsMouseOver}"
                                            Value="True">
                                            <Setter Property="Background" Value="White" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Line Stretch="Fill" Y2="35" HorizontalAlignment="Right" VerticalAlignment="Top" Height="25"
                              Width="25" Fill="{x:Null}" X2="35" Margin="0,-4,-4,0" StrokeThickness="3" />
                    </Grid>
                </Border>
                <StackPanel HorizontalAlignment="Left" Height="54" Margin="222,0,-7,0" VerticalAlignment="Top"
                            Width="155" Orientation="Horizontal">
                    <Button Name="btnSettings" Click="btnSettings_Click" BorderBrush="{x:Null}"
                            VerticalAlignment="Bottom" Background="#00000000"
                            Template="{DynamicResource BackgroundButton}" Margin="0" Height="54" Width="51.6"
                            UseLayoutRounding="False" IsHitTestVisible="True" Cursor="Hand"
                            ToolTip="Change game or launcher settings">
                        <Button.Resources>
                            <ControlTemplate x:Key="BackgroundButton" TargetType="Button">
                                <Border Name="border" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True" />
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="Resources/BTN_Settings.png" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}"
                                        Value="True">
                                        <Setter Property="Source" Value="Resources/BTN_Settings_Blue.png" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                        <Image Height="26" HorizontalAlignment="Center" Width="26" />
                    </Button>
                    <Button Name="btnReddit" Click="btnReddit_Click" BorderBrush="{x:Null}" VerticalAlignment="Bottom"
                            Background="#00000000" Template="{DynamicResource BackgroundButton}" Margin="0" Height="54"
                            UseLayoutRounding="False" Width="51.6" Cursor="Hand"
                            ToolTip="Open the reddit page in your browser">
                        <Button.Resources>
                            <ControlTemplate x:Key="BackgroundButton" TargetType="Button">
                                <Border Name="border" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True" />
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="Resources/BTN_Reddit.png" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}"
                                        Value="True">
                                        <Setter Property="Source" Value="Resources/BTN_Reddit_Blue.png" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                        <Image HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" />
                    </Button>
                    <Button Name="btnInfo" Click="btnInfo_Click" BorderBrush="{x:Null}" VerticalAlignment="Bottom"
                            Background="#00000000" Template="{DynamicResource BackgroundButton}" Margin="0" Height="54"
                            UseLayoutRounding="False" Width="51.6" Cursor="Hand" ToolTip="Information about stuff."
                            Visibility="Collapsed">
                        <Button.Resources>
                            <ControlTemplate x:Key="BackgroundButton" TargetType="Button">
                                <Border Name="border" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True" />
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="Resources/BTN_Help.png" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}"
                                        Value="True">
                                        <Setter Property="Source" Value="Resources/BTN_Help_Blue.png" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                        <Image HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="26" />
                    </Button>
                    <Button Name="btnDebug" Click="btnDebug_Click" BorderBrush="{x:Null}" VerticalAlignment="Bottom"
                            Background="#00000000" Template="{DynamicResource BackgroundButton}" Margin="0" Height="54"
                            UseLayoutRounding="False" Width="51.6" Cursor="Hand"
                            ToolTip="View the debug logs for debugging purposes.">
                        <Button.Resources>
                            <ControlTemplate x:Key="BackgroundButton" TargetType="Button">
                                <Border Name="border" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True" />
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="Resources/BTN_Debug.png" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}"
                                        Value="True">
                                        <Setter Property="Source" Value="Resources/BTN_Debug_Blue.png" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                        <Image HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="26"
                               Opacity="0.9" />
                    </Button>
                </StackPanel>
                <Button Name="btnChangelog" Click="btnChangelog_Click" BorderBrush="{x:Null}" VerticalAlignment="Center"
                        Background="#00000000" Template="{DynamicResource BackgroundButton}" Width="370"
                        HorizontalAlignment="Left" Margin="0,45,0,0" Cursor="Hand" ToolTip="View the changelist">
                    <Button.Resources>
                        <ControlTemplate x:Key="BackgroundButton" TargetType="Button">
                            <Border Name="border" BorderThickness="0" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True" />
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Resources>
                    <StackPanel Height="39" Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="Resources/BTN_Changelog.png" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}"
                                        Value="True">
                                        <Setter Property="Source" Value="Resources/BTN_Changelog_Blue.png" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>

                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Foreground" Value="#ffffffff" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding RelativeSource={RelativeSource AncestorType=Button},
                                                   Path=IsMouseOver}"
                                        Value="True">
                                        <Setter Property="Foreground" Value="#FF47A6FF" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Resources>
                        <Image Height="18" HorizontalAlignment="Left" Margin="0" Width="20" />
                        <TextBlock TextWrapping="Wrap" Margin="10,-8,580,-7" Grid.ColumnSpan="2" FontSize="21"
                                   TextOptions.TextFormattingMode="Display" VerticalAlignment="Center" Width="350">
                            <Run Text="CURRENT VERSION: " BaselineAlignment="Center" />
                            <Run x:Name="lblVersion" Text="Verifying " FontFamily="/Resources/#Aero Matics"
                                 BaselineAlignment="Center" />
                        </TextBlock>
                    </StackPanel>
                </Button>
                <!-- Do not remove this, Fish, I'm looking at you -->
                <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Foreground="White" FontSize="10" TextOptions.TextFormattingMode="Display"
                           VerticalAlignment="Bottom" Opacity="0.25"
                           FontFamily="/DoritoPatcherWPF;component/Resources/#Aero Matics" 
                           Text="IN NO WAY AFFILIATED WITH INNOVA CO., 343 INDUSTRIES, MICROSOFT OR BUNGIE STUDIOS" HorizontalAlignment="Left"/>
            </Grid>
            <Label x:Name="minecraft" Content="NOW WITH MORE ANIMATIONS" HorizontalAlignment="Left"
                   Margin="56,103,-23,0" VerticalAlignment="Top" Foreground="#FFFFE800" RenderTransformOrigin="0.5,0.5"
                   FontFamily="Minecraftia" Height="54" Width="337" HorizontalContentAlignment="Center"
                   Visibility="Hidden">
                <Label.Style>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="FontSize" Value="18" />
                        <Style.Triggers>
                            <DataTrigger
                                Binding="{Binding RelativeSource={RelativeSource AncestorType=Grid},
                                                   Path=IsMouseOver}"
                                Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="FontSize" From="18.1" To="20.1"
                                                Duration="0:0:0.500" BeginTime="0:0:0" AutoReverse="True" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
                <Label.Effect>
                    <DropShadowEffect BlurRadius="0" ShadowDepth="3" />
                </Label.Effect>
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="27.26" />
                        <TranslateTransform />
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <Image HorizontalAlignment="Center" Width="26" Margin="0,371,344,133" />
            <Button Name="btnUpdate" Click="btnNo_Update" BorderBrush="{x:Null}"
                            VerticalAlignment="Bottom" Background="#00000000"
                            Template="{DynamicResource BackgroundButton}" Margin="0,371,330,115" Height="54" Width="51.6"
                            UseLayoutRounding="False" IsHitTestVisible="True" Cursor="Hand"
                            ToolTip="Launch the game without updating">
                <Button.Resources>
                    <ControlTemplate x:Key="BackgroundButton" TargetType="Button">
                        <Border Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True" />
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Source" Value="Resources/BTN_Debug.png" />
                        <Style.Triggers>
                            <DataTrigger
                                        Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}"
                                        Value="True">
                                <Setter Property="Source" Value="Resources/BTN_Debug_Blue.png" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Resources>
                <Image Height="26" HorizontalAlignment="Center" Width="26" />
            </Button>
        </Grid>


        <!-- Right column starts here -->
        <Grid x:Name="contentPanels" Grid.Column="1" Grid.Row="1">
            <Grid x:Name="mainButtons" Grid.Column="1" Grid.Row="1">
                <st:AutoGrid Grid.Row="0" Grid.Column="0" Rows="*,*,*,*" Columns="*" Margin="10,20,20,20">
                    <Grid Grid.Row="1" Margin="0,0,0,5" VerticalAlignment="Top">
                        <Grid.Style>
                            <Style TargetType="{x:Type Grid}">
                                <Style.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="BorderBrush" Value="#FF47A6FF" />
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding RelativeSource={RelativeSource AncestorType=Grid},
                                                   Path=IsMouseOver}"
                                                Value="True">
                                                <Setter Property="BorderBrush" Value="#FFB3DAFF" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Style.Resources>
                            </Style>
                        </Grid.Style>
                        <Border BorderThickness="1">
                            <Border.Clip>
                                <GeometryGroup>
                                    <!--This PathGeometry will cut RectangleGeometry, cut-off right top-->
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigure x:Name="BorderClipFigure2" StartPoint="0,0">
                                                <LineSegment Point="534,0" />
                                                <LineSegment Point="570,36" />
                                                <LineSegment Point="570,130" />
                                                <LineSegment Point="0,130" />
                                            </PathFigure>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
